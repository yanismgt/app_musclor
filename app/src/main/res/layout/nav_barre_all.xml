<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_app"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <include layout="@layout/line_title_nav"
        android:id="@+id/relative_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/transparent"
        android:layout_below="@id/relative_nav"
        android:paddingBottom="20dp"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/logo_add"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:contentDescription="@string/logo_add"
            android:layout_gravity="center_vertical"
            android:onClick="switchNav" />


        <ImageButton
            android:id="@+id/button_seance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/logo_muscle"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:contentDescription="@string/logo_muscle"
            android:layout_gravity="center_vertical"
            android:onClick="switchNav"/>

        <ImageButton
            android:id="@+id/button_param"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/logo_para"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:contentDescription="@string/logo_para"
            android:layout_gravity="center_vertical"
            android:onClick="switchNav"/>

    </LinearLayout>

</RelativeLayout>